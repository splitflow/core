{
    "name": "@splitflow/core",
    "version": "2.0.0",
    "description": "Splitflow core package",
    "author": "team@splitflow.io",
    "homepage": "https://github.com/splitflow/core#readme",
    "bugs": {
        "url": "https://github.com/splitflow/core/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/splitflow/core.git"
    },
    "type": "module",
    "files": [
        "dist/**/*.js",
        "dist/**/*.cjs",
        "dist/**/*.d.ts"
    ],
    "exports": {
        "./utils": {
            "import": "./dist/utils/index.js",
            "require": "./dist/utils/index.cjs"
        },
        "./dom": {
            "import": "./dist/dom/index.js",
            "require": "./dist/dom/index.cjs"
        },
        "./path": {
            "import": "./dist/path.js",
            "require": "./dist/path.cjs"
        },
        "./stores": {
            "import": "./dist/stores.js",
            "require": "./dist/stores.cjs"
        },
        "./compiler": {
            "import": "./dist/compiler/index.js",
            "require": "./dist/compiler/index.cjs"
        },
        "./definition": {
            "import": "./dist/definition/index.js",
            "require": "./dist/definition/index.cjs"
        }
    },
    "typesVersions": {
        "*": {
            "utils": [
                "dist/utils/index.d.ts"
            ],
            "dom": [
                "dist/dom/index.d.ts"
            ],
            "path": [
                "dist/path.d.ts"
            ],
            "stores": [
                "dist/stores.d.ts"
            ],
            "compiler": [
                "dist/compiler/index.d.ts"
            ],
            "definition": [
                "dist/definition/index.d.ts"
            ]
        }
    },
    "scripts": {
        "build": "tsup",
        "build:watch": "tsup --watch",
        "test": "vitest"
    },
    "devDependencies": {
        "tsup": "^6.5.0",
        "typescript": "^4.9.4",
        "vitest": "^0.27.3"
    }
}
